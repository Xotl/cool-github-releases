    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "preLaunchTask": "Build development Docker image",
            "runtimeExecutable": "docker",
            "runtimeArgs": [
                "run", "--rm",
                "--name", "gh-action",
                "-p", "9229:9229",
                "-v", "${workspaceFolder}/src:/usr/src/app/src",
                "-v", "${workspaceFolder}/.env:/usr/src/app/.env",
                "gh-action",
                "npm", "run", "debug"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src",
            "port": 9229
        }
    ]
}